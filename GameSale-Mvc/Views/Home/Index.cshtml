@model IEnumerable<GameSale_Entity.Entities.Game>
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2>Game List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Game" asp-action="Crup" class="btn btn-primary">
                <span>Add New Game</span>
            </a>
        </div>
    </div>
    <div class="row">
        <table class="table table-bordered table-striped my-2">
            <thead>
                <tr>
                    <th>Game Name</th>
                    <th>Game Price</th>
                    <th>Game Developer</th>
                    <th>Game Publisher</th>

                    <th>Release Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @item.GameName
                        </td>
                        <td>
                            @(item.Price == 0.00m ? "Free" : item.Price.ToString("C"))
                        </td>
                        <td>
                            @item.Developer
                        </td>
                        <td>
                            @item.Publisher
                        </td>
                        <td>@item.ReleaseDate.ToString("dd MMMM yyyy")</td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>