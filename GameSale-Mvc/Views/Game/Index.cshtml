@model IEnumerable<GameSale_Entity.Entities.Game>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutGame.cshtml";
}

<h1 class="text-light">Tüm Oyunlar</h1>

<div class="container">
    <div class="row">
        <div class="col-6">
            <h2>Game List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Game" asp-action="Crup" class="btn btn-primary">
                <span>Add New Game</span>
            </a>
        </div>
    </div>
    <div class="row">
        <table class="table table-bordered table-striped my-2">
            <thead>
                <tr>
                    <th>Game Name</th>
                    <th>Game Image</th>
                    <th>Game Price</th>
                    <th>Game Developer</th>
                    <th>Game Publisher</th>
                    <th>Release Date</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-light">

                        <td>
                            @item.GameName

                        </td>
                        <td>
                            <div class="card-img-container">
                            <a href="@Url.Action("Details","Game", new {id= item.Id})">
                                @if(item.Images !=null && item.Images.Any())
                                {
                                 
                                    <img src="@Url.Content(item.Images.First().ImageUrl)" class="bd-placeholder-img card-img-top" width="100%" alt="@item.GameName" />
                                    
                                }

                                </a>
                            </div>
                        </td>
                        <td>
                            @(item.Price == 0.00m ? "Free" : item.Price.ToString("C"))
                        </td>
                        <td>
                            @item.Developer
                        </td>
                        <td>
                            @item.Publisher
                        </td>
                        <td>@item.ReleaseDate.ToString("dd MMMM yyyy")</td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>